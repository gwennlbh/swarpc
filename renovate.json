{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:weekly"],
  "commitMessagePrefix": "⬆️ ",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "dev tooling",
      "description": "Auto-merge updates to dev tooling (linters, formatters, etc)",
      "matchFileNames": ["!example/package.json"],
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["!@playwright/test"],
      "automerge": true
    },
    {
      "groupName": "playwright",
      "matchPackageNames": [
        "@playwright/test",
        "mcr.microsoft.com/playwright",
        "ghcr.io/gwennlbh/playwright-bun"
      ]
    },
    {
      "groupName": "example package",
      "matchFileNames": ["example/package.json"],
      "automerge": true
    }
  ]
}
